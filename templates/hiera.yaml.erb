---
:backends:
  - yaml
<% if @hiera_gpg -%>
  - gpg
<% end -%>
:hierarchy:
  - defaults
  - nodes/%{fqdn}
  - env/%{environment}
  - global

<if @hiera_gpg -%>
:gpg:
  :datadir: '/etc/hiera-gpg'

<% end -%>
:yaml:
# datadir is empty here, so hiera uses its defaults
# When specifying a datadir, make sure the path of the datadir exists
  :datadir: '/etc/hiera'
